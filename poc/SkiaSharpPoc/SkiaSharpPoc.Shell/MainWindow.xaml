<Window x:Class="SkiaSharpPoc.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="SkiaSharp GPU Waveform POC"
        Width="1280" Height="720"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Audio..." Click="MenuItem_OpenAudio_Click"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Toggle Stats" Click="MenuItem_ToggleStats_Click" InputGestureText="S"/>
                <MenuItem Header="Reset View" Click="MenuItem_ResetView_Click" InputGestureText="Space"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="MenuItem_About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Content Host - SKElement for SkiaSharp rendering (CPU, more compatible) -->
        <Border Grid.Row="1"
                Background="#FF1E1E2E"
                BorderBrush="#FF313244"
                BorderThickness="1">
            <skia:SKElement x:Name="SkiaCanvas"
                            PaintSurface="SkiaCanvas_PaintSurface"
                            MouseDown="SkiaCanvas_MouseDown"
                            MouseUp="SkiaCanvas_MouseUp"
                            MouseMove="SkiaCanvas_MouseMove"
                            MouseWheel="SkiaCanvas_MouseWheel"/>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready - Load an audio file or press Space to reset view"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="ZoomText" Text="Zoom: 1.00x"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TimeRangeText" Text="Time: 0.00s - 0.00s"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="FpsText" Text="FPS: - | Frame: -ms"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
