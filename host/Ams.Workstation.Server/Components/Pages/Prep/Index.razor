@page "/prep"

<PageTitle>Prep - AMS Workstation</PageTitle>

<div class="area-placeholder">
    <BitStack Horizontal="false" Gap="1rem" HorizontalAlign="BitAlignment.Center">
        <div class="placeholder-icon">
            <BitIcon IconName="Processing" Style="font-size: 2rem;" />
        </div>

        <BitText Typography="BitTypography.H4">Prep Area</BitText>
        <BitText Typography="BitTypography.Body1" Color="BitColor.SecondaryForeground">
            Pipeline orchestration and chapter preparation.
        </BitText>

        <BitTag Color="BitColor.Info">Coming Soon</BitTag>

        <BitCard Class="placeholder-features">
            <BitText Typography="BitTypography.Subtitle2" Color="BitColor.SecondaryForeground"
                     Style="text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 1rem;">
                Planned Features
            </BitText>
            <ul class="feature-list">
                <li>
                    <BitIcon IconName="Play" Style="margin-right: 0.5rem;" />
                    Pipeline execution and monitoring
                </li>
                <li>
                    <BitIcon IconName="Microphone" Style="margin-right: 0.5rem;" />
                    ASR job management
                </li>
                <li>
                    <BitIcon IconName="AlignLeft" Style="margin-right: 0.5rem;" />
                    MFA forced alignment control
                </li>
                <li>
                    <BitIcon IconName="BulletedList" Style="margin-right: 0.5rem;" />
                    Batch processing configuration
                </li>
            </ul>
        </BitCard>
    </BitStack>
</div>

<style>
    .area-placeholder {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        padding: 2rem 0;
    }

    .placeholder-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        background-color: rgba(0, 120, 212, 0.1);
        border: 2px solid rgba(0, 120, 212, 0.3);
        border-radius: 16px;
        color: #0078d4;
    }

    .placeholder-features {
        text-align: left;
        width: 100%;
        max-width: 400px;
    }

    .feature-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .feature-list li {
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--bit-clr-brd-sec);
    }

    .feature-list li:last-child {
        border-bottom: none;
    }
</style>
